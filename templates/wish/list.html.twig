{% extends 'base.html.twig' %}

{% block body %}
<table class="table">
    <thead>
    <th>Titre</th>
    <th>Author</th>
    <th>Publie</th>
    </thead>
    <tbody>
    {% for wish in wishes %}
        <tr>
            <td>
                <a href="{{ path('wish_detail', {id: wish.id})}}">
                    {{ wish.title }}
                </a>
            </td>
            <td>{{ wish.author }}</td>
            <td>{{ wish.published ? "yes" : "no" }}</td>
        </tr>

    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block title %}

{% endblock %}

